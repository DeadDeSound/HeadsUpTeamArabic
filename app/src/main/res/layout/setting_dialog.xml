<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="زمن اللعبة"
        android:id="@+id/time_txt"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:id="@+id/btn60"
        android:background="#919191"
        android:layout_alignTop="@+id/btn90"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:id="@+id/btn90"
        android:layout_below="@+id/time_txt"
        android:layout_toRightOf="@+id/btn60"
        android:layout_centerHorizontal="true"
        android:background="#919191"
        android:layout_marginBottom="15dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120"
        android:id="@+id/btn120"
        android:background="#919191"
        android:layout_alignTop="@+id/btn90"
        android:layout_toRightOf="@+id/btn90"
        android:layout_toEndOf="@+id/btn90"/>

</RelativeLayout>